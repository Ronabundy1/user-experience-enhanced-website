<%- include('./partials/head') %>
<main>
    <!-- Section for displaying "Vraag" items -->
    <section class="vraag-section">
        <h2>Vraag</h2>
        <ul>
            <% vraagaanbod.filter(item => item.type === 'vraag').forEach(function(item) { %>
                <li>
                    <% if (item.image) { %>
                        <img src="https://fdnd-agency.directus.app/assets/<%= item.image %>" alt="<%= item.title %>" width="300" height="150">
                    <% } %>
                    <div>
                        <h3><a href="/detail/<%= item.id %>"><%= item.title %></a></h3>
                        <p><%= item.short_description %></p>
                        <p>Meer informatie</p>
                        <!-- Like button -->
                        <button type="button" id="likeButton" onclick="handleLike('<%= item.id %>')">❤️ Like</button>
                        <span id="like-count-<%= item.id %>"><%= item.likes || 0 %></span>
                    </div>
                </li>
            <% }) %>
        </ul>
    </section>
    <!-- Section for displaying "Aanbod" items -->
    <section class="aanbod-section">
        <h2>Aanbod</h2>
        <ul>
            <% vraagaanbod.filter(item => item.type === 'aanbod').forEach(function(item) { %>
                <li>
                    <% if (item.image) { %>
                        <img src="https://fdnd-agency.directus.app/assets/<%= item.image %>" alt="<%= item.title %>" width="300" height="150">
                    <% } %>
                    <div>
                        <h3><a href="/detail/<%= item.id %>"><%= item.title %></a></h3>
                        <p><%= item.short_description %></p>
                        <p>Meer informatie</p>
                        <!-- Like button -->
                        <button type="button" id="likeButton" onclick="handleLike('<%= item.id %>')">❤️ Like</button>
                        <span id="like-count-<%= item.id %>"><%= item.likes || 0 %></span>
                    </div>
                </li>
            <% }) %>
        </ul>
    </section>
</main>
<%- include('./partials/foot') %>

<script src="/main.js"></script>


