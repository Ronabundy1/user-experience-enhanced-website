                    <% if (item.image) { %>
                        <!-- Toon item afbeelding indien beschikbaar -->
                        <img src="https://fdnd-agency.directus.app/assets/<%= item.image %>" alt="<%= item.title %>" width="300" height="150">
                    <% } %>
                    <div>
                        <!-- Toon item titel met een link naar detailpagina -->
                        <h3><a href="/detail/<%= item.id %>"><%= item.title %></a></h3>
                        <!-- Toon item korte beschrijving -->
                        <p><%= item.short_description %></p>
                        <!-- Plaatsaanduiding voor het weergeven van meer informatie -->
                        <p>Meer informatie</p>
                    </div>
            <% }) %>
        </ul>
    </section>
</main>
